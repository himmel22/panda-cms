doctype 5
html
    head
        title= title
        link(rel='stylesheet', href='/css/bootstrap.css')
        link(rel='stylesheet', href='/css/bootstrap-responsive.css')
        link(rel='stylesheet', href='/css/admin.css')
        script(type="text/javascript", src="/js/lib/jquery-1.9.1.min.js")  
        script(type="text/javascript", src="/js/lib/bootstrap.js")
        script(type="text/javascript", src="/js/lib/ckeditor/ckeditor.js")
        block head
    body
        .navbar.navbar-inverse
            .navbar-inner
                .container
                    button.btn.btn-navbar(type='button', data-toggle='collapse', data-target='.nav-collapse')
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.brand(href='/admin') Panda-cms
                    .nav-collapse.collapse
                        ul.nav
                            li
                                a.return-home(href="/") 返回首页
        #sidemenu
            ul
                li
                    a(href="/admin") 
                        i.icon-list.icon-white
                        | 内容管理
                li
                    a(href="/admin/share/photo")
                        i.icon-share.icon-white
                        | 照片
                li
                    a(href="/admin/share/video")
                        i.icon-share.icon-white
                        | 视频
                li
                    a(href="/admin/share/data")
                        i.icon-share.icon-white
                        | 资料
        #content
            .container-fluid
                if alert
                    .alert(class="#{alert.type}")
                        button.close(type="button", data-dismiss="alert") &times;
                        | #{alert.message}
                block content
