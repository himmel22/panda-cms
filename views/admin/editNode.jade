extends adminLayout
block head
	script(type="text/javascript", src="/js/lib/ckeditor/ckeditor.js")
	script.
		$(function() {
			CKEDITOR.replace('nodeContent', {
				language: 'zh-cn',
				height: '600px',
				filebrowserImageUploadUrl: '/upload/image'
				});
			});
block content
	.row-fluid
		#content-header.span12
			if nodeTitle
				h1= '编辑页面： ' + nodeTitle
			else
				h1= '编辑页面： ' + nodeName
	.row-fluid
		#content-body.span12
			form#edit-node-form(method="POST", action="/node/#{nodeName}/edit")
				.control-group
					label.control-label.inline(for="nodeTitle") 页面标题：
					.controls
						input(type="text", name="nodeTitle", value="#{nodeTitle}")
				div
					textarea.editor(name="nodeContent")= nodeContent
				.form-actions
					button.btn.btn-primary(type="submit") 提交